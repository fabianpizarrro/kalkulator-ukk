<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40sp"
        android:layout_marginRight="10sp"
        android:layout_weight="1"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="35sp" />
    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10sp"
        android:layout_weight="1"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="45sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clear"
            style="@style/Style2"
            android:text="C" />


        <TextView
            android:id="@+id/startBracket"
            style="@style/Style2"
            android:text="(" />

        <TextView
            android:id="@+id/closeBracket"
            style="@style/Style2"
            android:text=")" />

        <TextView
            android:id="@+id/actionDivide"
            style="@style/Style"
            android:text="รท" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num7"
            style="@style/Style3"
            android:text="7" />

        <TextView
            android:id="@+id/num8"
            style="@style/Style3"
            android:text="8" />

        <TextView
            android:id="@+id/num9"
            style="@style/Style3"
            android:text="9" />


        <TextView
            android:id="@+id/actionMultiply"
            style="@style/Style"
            android:text="x" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num4"
            style="@style/Style3"
            android:text="4" />


        <TextView
            android:id="@+id/num5"
            style="@style/Style3"
            android:text="5" />


        <TextView
            android:id="@+id/num6"
            style="@style/Style3"
            android:text="6" />


        <TextView
            android:id="@+id/actionMinus"
            style="@style/Style"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num1"
            style="@style/Style3"
            android:text="1" />


        <TextView
            android:id="@+id/num2"
            style="@style/Style3"
            android:text="2" />


        <TextView
            android:id="@+id/num3"
            style="@style/Style3"
            android:text="3" />


        <TextView
            android:id="@+id/actionAdd"
            style="@style/Style"
            android:text="+" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numDot"
            style="@style/Style3"
            android:text="." />


        <TextView
            android:id="@+id/num0"
            style="@style/Style3"
            android:text="0" />

        <TextView
            android:id="@+id/actionBack"
            style="@style/Style3"
            android:text="Del" />

        <TextView
            android:id="@+id/actionEquals"
            style="@style/Style"
            android:text="=" />

    </LinearLayout>

</LinearLayout>